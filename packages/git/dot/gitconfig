[user]
  name = Artem Nezvigin
  email = artem@artnez.com
[core]
  excludesfile = ~/.gitignore
  pager = less -E
[diff]
  tool = vimdiff
[color]
  ui = true
  branch = auto
  diff = always
  status = always
[alias]
  wip = commit -a -m wip
  st = status
  co = checkout
  cm = commit
  vlog = log --graph --date-order --date=relative --pretty=format:'%C(cyan)%h: %Cblue - %an - %Cgreen %C(cyan)%ar:%Creset%n%s%n' --color
  info = !git branch && echo && git status && echo && git log -n2
  tags = "!git tag | vsort"
[push]
  default = current
